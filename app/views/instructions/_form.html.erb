<%= render('layouts/errors', :object => @instruction) %>

<%= form_for [@figure, @instruction] do |f| %>
  <%= f.label :number %>
  <%= f.text_field :number, class: "form-control" %>
  <br>
  <%= f.label :move %>
  <%= f.text_field :move, class: "form-control" %>
  <br>
  <%= f.label :call %>
  <%= f.text_field :call, class: "form-control" %>
  <br>
  <%= f.label :instruction %>
  <%= f.text_area :instruction, class: "form-control" %>
  <br>
  <%= f.label :bars %>
  <%= f.text_field :bars, class: "form-control" %>
  <br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
